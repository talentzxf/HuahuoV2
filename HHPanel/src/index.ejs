<script type="application/javascript">
    window.onload = function(){
        let hhContent = document.createElement("hh-content")
        hhContent.title = "NewElement"
        hhContent.style.width = "100%"
        hhContent.style.height = "100%"
        hhContent.style.flexBasis = "100%"
        hhContent.style.alignItems = "stretch"

        let elementContent = document.createElement("div")
        elementContent.innerText = "New Element"

        hhContent.appendChild(elementContent)

        let targetPanel = document.querySelector("#targetPanel")
        let id = targetPanel.addContent(hhContent)

        targetPanel.selectTab(id)

    }
</script>
